{
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "slim/php-view": "^3.2",
        "php-di/php-di": "^7.0",
        "slim/twig-view": "^3.3",
        "slim/flash": "^0.4.0",
        "illuminate/database": "^10.40",
        "symfony/console": "^7.0",
        "ext-http": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "*",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "scripts": {

        "phpstan": "phpstan analyse --memory-limit=1G",

        "phpcs": "phpcs --standard=PSR12 src",

        "phpcbf": "phpcbf --standard=PSR12 src"
    }
}
